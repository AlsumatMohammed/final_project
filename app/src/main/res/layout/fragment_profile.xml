<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/text_color_orange"
        android:padding="10dp">

        <TextView
            android:id="@+id/ypartsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Y-parts"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/whiteTextColor"
            android:textSize="20sp"
            />

        <ImageView
            android:id="@+id/tireImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ypartsTv"
            app:layout_constraintLeft_toLeftOf="@id/ypartsTv"
            app:layout_constraintRight_toRightOf="@id/ypartsTv"
            android:src="@drawable/tire"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"/>


        <ImageView
            android:id="@+id/logout_fragmentprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logout"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/ypartsTv"
            app:layout_constraintBottom_toBottomOf="@id/tireImage"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/constraint1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraint1"
            android:paddingBottom="10dp"
            android:background="#F1F0F0">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/text_color_orange"
                android:paddingBottom="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_imageprofile_fragment"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/avatar"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:id="@+id/username_fragmentprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    app:layout_constraintTop_toBottomOf="@id/profile_imageprofile_fragment"
                    app:layout_constraintLeft_toLeftOf="@id/profile_imageprofile_fragment"
                    app:layout_constraintRight_toRightOf="@id/profile_imageprofile_fragment"/>


                <TextView
                    android:id="@+id/mobileTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/username_fragmentprofile"
                    app:layout_constraintLeft_toLeftOf="@id/username_fragmentprofile"
                    app:layout_constraintRight_toRightOf="@id/username_fragmentprofile"/>


                <TextView
                    android:id="@+id/phone_fragmentprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="716434383"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="@id/mobileTv"
                    app:layout_constraintTop_toBottomOf="@id/mobileTv"
                    app:layout_constraintRight_toRightOf="@id/mobileTv"/>

                <Button
                    android:id="@+id/phoneEditButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/edit_icon"
                    android:layout_gravity="center"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="@id/mobileTv"
                    app:layout_constraintBottom_toBottomOf="@id/phone_fragmentprofile"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone_call"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/mobileTv"
                    app:layout_constraintBottom_toBottomOf="@id/phone_fragmentprofile"/>


                <TextView
                    android:id="@+id/emailTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@id/phone_fragmentprofile"
                    app:layout_constraintLeft_toLeftOf="@id/phone_fragmentprofile"
                    app:layout_constraintRight_toRightOf="@id/phone_fragmentprofile"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/email_fragmentprofile"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="mohammedsaleh@gmail.com"
                    android:fontFamily="@font/montserrat"
                    android:textSize="15sp"
                    android:gravity="center"
                    app:layout_constraintLeft_toLeftOf="@id/emailTv"
                    app:layout_constraintRight_toRightOf="@id/emailTv"
                    app:layout_constraintTop_toBottomOf="@id/emailTv"/>
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/edit_icon"
                    app:layout_constraintTop_toTopOf="@id/emailTv"
                    app:layout_constraintBottom_toBottomOf="@id/email_fragmentprofile"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/email"
                    app:layout_constraintTop_toTopOf="@id/emailTv"
                    app:layout_constraintBottom_toBottomOf="@id/email_fragmentprofile"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/userTypeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User type"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@id/email_fragmentprofile"
                    app:layout_constraintLeft_toLeftOf="@id/email_fragmentprofile"
                    app:layout_constraintRight_toRightOf="@id/email_fragmentprofile"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/usertype_fragmentprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="Customer"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="@+id/userTypeTv"
                    app:layout_constraintStart_toStartOf="@+id/userTypeTv"
                    app:layout_constraintTop_toBottomOf="@id/userTypeTv"/>

                <Button
                    android:id="@+id/customerEditButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/edit_icon"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toTopOf="@id/userTypeTv"
                    app:layout_constraintBottom_toBottomOf="@id/usertype_fragmentprofile"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user"
                    app:layout_constraintTop_toTopOf="@id/userTypeTv"
                    app:layout_constraintBottom_toBottomOf="@id/usertype_fragmentprofile"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="20dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/favoriteCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/loginCard"
                android:elevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#F0F2F2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@id/constraint3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/favoriteAds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Favourite Ads:"
                        android:textColor="@color/title_text_color"
                        android:textSize="15sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/favouritesAdsRecyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:clipToPadding="false"
                        android:scrollbars="horizontal"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/favoriteAds" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/previousCardProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/loginCard"
                android:elevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#F0F2F2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@id/favoriteCard"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="50dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/previousAdsProfiletv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="My Ads:"
                        android:textColor="@color/title_text_color"
                        android:textSize="15sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/previousAdsProfileRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:clipToPadding="false"
                        android:scrollbars="horizontal"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/previousAdsProfiletv" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>