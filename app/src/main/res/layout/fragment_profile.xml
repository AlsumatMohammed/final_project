<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">





    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/loginCard"
        android:elevation="20dp"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#F0F2F2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_imageprofile_fragment"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/avatar"
                android:padding="10dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/text_color_orange"/>

            <TextView
                android:id="@+id/username_fragmentprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_bold"
                android:layout_gravity="center"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone_call"
                    android:layout_margin="10dp"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"


                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="20sp"
                        android:layout_gravity="center"/>


                    <TextView
                        android:id="@+id/phone_fragmentprofile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="716434383"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat"
                        android:textSize="15sp"/>


                    <Button
                        android:id="@+id/phoneEditButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/edit_icon"
                        android:layout_gravity="center"/>


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/email"
                    android:layout_margin="10dp">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="20sp"
                        android:layout_gravity="center"/>


                    <TextView
                        android:id="@+id/email_fragmentprofile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mohammedsaleh@gmail.com"
                        android:fontFamily="@font/montserrat"
                        android:textSize="15sp"
                        android:layout_gravity="center"/>
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/edit_icon"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user"
                    android:layout_margin="10dp">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User type"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="20sp"
                        android:layout_gravity="center"/>



                    <TextView
                        android:id="@+id/usertype_fragmentprofile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer"
                        android:fontFamily="@font/montserrat"
                        android:textSize="15sp"
                        android:layout_gravity="center"/>

                    <Button
                        android:id="@+id/customerEditButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/edit_icon"
                        android:layout_gravity="center"/>


                </LinearLayout>
            </LinearLayout>

            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                android:id="@+id/logout_fragmentprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/logout_button"
                android:fontFamily="@font/montserrat_bold"
                android:text="Logout "
                android:layout_gravity="center"
                android:textColor="@color/text_color_orange"
                app:spinning_bar_width="4dp"
                app:spinning_bar_color="@color/text_color_orange"
                app:spinning_bar_padding="6dp"
                android:drawableLeft="@drawable/logout"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           style="@style/loginCard"
           android:elevation="20dp"
           app:cardCornerRadius="20dp"
           android:layout_gravity="center"
           app:cardBackgroundColor="#F0F2F2"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_marginBottom="10dp"

           android:padding="10dp">

           <TextView
               android:id="@+id/previousAds"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:fontFamily="@font/montserrat_bold"
               android:text="Favourite Ads:"
               android:textColor="@color/title_text_color"
               android:textSize="15sp"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintTop_toTopOf="parent" />


           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/favouritesAdsRecyclerview"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               android:clipToPadding="false"
               android:scrollbars="horizontal"
               android:nestedScrollingEnabled="false"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintTop_toBottomOf="@id/previousAds" />
       </androidx.constraintlayout.widget.ConstraintLayout>
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/previousCardProfile"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           style="@style/loginCard"
           android:elevation="10dp"
           app:cardCornerRadius="20dp"
           android:layout_gravity="center"
           app:cardBackgroundColor="#F0F2F2"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp">

           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:layout_marginBottom="10dp"
               android:padding="10dp">

               <TextView
                   android:id="@+id/previousAdsProfiletv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:fontFamily="@font/montserrat_bold"
                   android:text="My Ads:"
                   android:textColor="@color/title_text_color"
                   android:textSize="15sp"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />


               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/previousAdsProfileRecyclerView"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="10dp"
                   android:clipToPadding="false"
                   android:scrollbars="horizontal"
                   android:nestedScrollingEnabled="false"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/previousAdsProfiletv" />
           </androidx.constraintlayout.widget.ConstraintLayout>
       </androidx.cardview.widget.CardView>








   </LinearLayout>
</androidx.core.widget.NestedScrollView>