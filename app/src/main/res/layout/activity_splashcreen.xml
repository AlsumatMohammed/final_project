<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splashcreen"
    android:background="@color/button">

    <ImageView
        android:id="@+id/y_parts_logo_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:transitionName="logo_image"
        android:src="@drawable/yparts_logo_splash_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.207">

    </ImageView>

    <TextView
        android:id="@+id/y_parts_tv_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/noto_serif_bold"
        android:text="Y-PARTS"
        android:textColor="@color/text_color_blue"
        android:textSize="70sp"
        android:transitionName="logo_text"
        app:layout_constraintEnd_toEndOf="@id/y_parts_logo_splash"
        app:layout_constraintStart_toStartOf="@id/y_parts_logo_splash"
        app:layout_constraintTop_toBottomOf="@id/y_parts_logo_splash">

    </TextView>

    <TextView
        android:id="@+id/y_parts_tv_splash_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/raleway_medium"
        android:text="Automobile parts at your fingertips"
        android:textColor="@color/text_color_orange"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/y_parts_tv_splash"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@id/y_parts_tv_splash"
        app:layout_constraintTop_toBottomOf="@id/y_parts_tv_splash">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>